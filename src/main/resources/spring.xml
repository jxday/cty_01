<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
        default-init-method="init" default-destroy-method="destory"
>


    <!--    init-method属性指定具有无效无参数签名的方法的名称。使用java配置，可以用`@bean`的initMethod属性 -->
    <bean id="InitMethodDemo" class = "com.jxday.spring.framework.InitMethodDemo" init-method="initDemo" destroy-method="destoryDemo"/>
</beans>
